<local:MyCard Title="" Margin="0,0,0,16" CanSwap="False" IsSwaped="false">
    <Border >
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#6b7280" Offset="0.0"/>
